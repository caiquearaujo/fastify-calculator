{
	"root": true,
	"extends": [
		"airbnb-base",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"plugins": [
		"@typescript-eslint",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"max-statements": ["error", 12],
		"no-console": "off",
		"prettier/prettier": "error"
	}
}